<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="org.shingo.insightdatareshaper.SalesforceSettingsController" 
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="login">
<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <Text id="welcome-text" text="Salesforce Settings" 
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
 
    <Label text="Environment"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
    <TextField fx:id="environmentField"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="Client Id" 
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    
    <TextField fx:id="idField"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/> 
    
    <Label text="Client Secret"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
 
    <PasswordField fx:id="secretField" 
        GridPane.columnIndex="1" GridPane.rowIndex="3"/> 
    
    <HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Save"     
        onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
           GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>
